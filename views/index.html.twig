<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <link rel="stylesheet" href="/css/styles.css" media="screen" charset="utf-8">
        <title>Stylist Me!</title>
    </head>
    <body>
        <div class="container">
            <div class="row" align="center">
                <h1>Stylist tracker, a brand new app for managing clients!</h1>
            </div>

            <div class="row" align="center">
                <div class="col-sm-6">
                    <h3>Add a new Stylist: </h3>

                    <form action="/stylists" method="post">
                        <label for="stylist_name">Stylist name: </label>
                        <input type="text" name="stylist_name" id="stylist_name">

                        <button type="submit" class="btn btn-info">Add Stylist!</button>
                    </form>
                </div>

                <div class="col-sm-6">
                    {% if stylists is not empty %}
                    <p>Here are all your stylists: </p>
                    <ul>
                        {% for stylist in stylists %}
                            <li><a href="/stylists/{{ stylist.getId }}">{{ stylist.getStylistName }}</a></li>
                        {% endfor %}
                    </ul>
                        {% else %}
                        <p>There are no stylists yet! Add some to get started!</p>
                    {% endif %}

                    <form action="/delete_stylists" method="post">
                        <button type="submit" class="btn btn-danger">Clear stylists!</button>
                    </form>
                </div>
        </div>
    </body>
</html>
